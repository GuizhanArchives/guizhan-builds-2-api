{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext"],
		"types": ["@cloudflare/workers-types/experimental", "@types/node"],
		"baseUrl": "./",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"],
			"~/shared/*": ["../src/*"]
		}
	}
}
